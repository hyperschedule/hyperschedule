{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "lib": ["esnext"],
    "sourceRoot": "./src",
    "baseUrl": "./src",
    "types": ["node"],
    "outDir": "./build",
    "paths": {
      "@/*": ["./*"],
      "@db/*": ["db/*"],
      "@routes/*": ["routes/*"],
      "@hmc-api/*": ["hmc-api/*"],
      "@auth/*": ["auth/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
  "files": ["src/fetch-tmp.d.ts","src/tiny-http-augment.d.ts"]
}
