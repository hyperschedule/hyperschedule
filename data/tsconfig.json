{
  "compilerOptions": {
    "composite": true,
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "sourceRoot": ".",
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx"]
}
